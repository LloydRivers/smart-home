{
  "entryPoints": [
    "./src/core/EventBus.ts",
    "./src/features/Bucket.ts",
    "./src/features/Cloudwatch.ts",
    "./src/features/Door.ts",
    "./src/features/FireSafety.ts",
    "./src/features/Lambda.ts",
    "./src/features/Light.ts",
    "./src/features/SmokeAlarm.ts",
    "./src/features/Sprinkler.ts",
    "./src/interfaces/index.ts",
    "./src/utils/Logger.ts"
  ],
  "out": "doc",
  "plugin": ["typedoc-umlclass"],
  "umlClassDiagram": {
    "type": "detailed",
    "location": "global",
    "format": "svg",
    "legendType": "only-included",
    "hideShadow": false,
    "style": {
      "box": {
        "backgroundColor": "fcf2cc",
        "border": {
          "width": 2,
          "color": "5a0000",
          "radius": 0
        }
      },
      "class": {
        "name": {
          "font": {
            "bold": true
          }
        }
      },
      "property": {
        "name": {
          "font": {
            "bold": true
          }
        },
        "type": {
          "font": {
            "color": "26009966"
          }
        }
      },
      "method": {
        "parameter": {
          "name": {
            "font": {
              "color": "780000"
            }
          },
          "type": {
            "font": {
              "color": "26009966"
            }
          }
        },
        "returnType": {
          "font": {
            "color": "26009966"
          }
        }
      }
    }
  }
}
