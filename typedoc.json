{
  "entryPoints": [
    "./src/alarms/IntruderAlarm.ts",
    "./src/features/SmokeAlarm.ts",
    "./src/cloud/Bucket.ts",
    "./src/cloud/Cloudwatch.ts",
    "./src/cloud/Lambda.ts",
    "./src/core/Eventbus.ts",
    "./src/devices/Door.ts",
    "./src/devices/Light.ts",
    "./src/devices/Sprinkler.ts",
    "./src/devices/Thermostat.ts",
    "./src/features/SmartHomeApp.ts",
    "./src/interfaces/index.ts",
    "./src/index.ts",
    "./src/utils/isWithinAnyPeriod.ts",
    "./src/utils/Logger.ts"
  ],
  "out": "docs",
  "plugin": ["typedoc-umlclass"],
  "umlClassDiagram": {
    "type": "detailed",
    "location": "global",
    "format": "svg",
    "legendType": "only-included",
    "hideShadow": false,
    "style": {
      "box": {
        "backgroundColor": "fcf2cc",
        "border": {
          "width": 2,
          "color": "5a0000",
          "radius": 0
        }
      },
      "class": {
        "name": {
          "font": {
            "bold": true
          }
        }
      },
      "property": {
        "name": {
          "font": {
            "bold": true
          }
        },
        "type": {
          "font": {
            "color": "26009966"
          }
        }
      },
      "method": {
        "parameter": {
          "name": {
            "font": {
              "color": "780000"
            }
          },
          "type": {
            "font": {
              "color": "26009966"
            }
          }
        },
        "returnType": {
          "font": {
            "color": "26009966"
          }
        }
      }
    }
  },
  "tsconfig": "tsconfig.json",
  "exclude": ["./docs/assets/**/*.js"]
}
