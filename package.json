{
  "name": "smart-home",
  "version": "1.0.0",
  "description": "University Project",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test-all": "npm run check-format && npm run check-lint && npm run build",
    "build:docs": "npx typedoc",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "check-lint": "eslint .",
    "prepare": "husky",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.1",
    "@vitest/coverage-v8": "^3.0.4",
    "husky": "^9.1.7",
    "prettier": "^3.5.0",
    "ts-node": "^10.9.2",
    "typedoc": "^0.27.6",
    "typedoc-umlclass": "^0.10.1",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4"
  },
  "dependencies": {
    "lint-staged": "^15.4.3"
  }
}
